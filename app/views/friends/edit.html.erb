<h1>Editing Friend</h1>
<br/>
<%= render 'form', friend: @friend %>

<br/>
<div class="d-flex p-2">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary mx-2 px-4" %>
    <%= button_to "Delete", @friend, method: :delete, class: "btn btn-danger mx-2 px-3" %>  
    <%= link_to 'Back', friends_path, class:"btn btn-dark px-4" %>
  </div>